{% extends "base.html" %}

{% block body %}
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />

    <h1>Creation d'un Contact </h1>
    <form action="?c=rdv&t=addContact" method="POST">
        <table>
            <tr>
                <td>Nom</td>
                <td><input type="text" name="nom" placeholder="insérer votre nom"></td>
            </tr>
            <tr>
                <td>Prenom</td>
                <td><input type="text"  name="prenom" placeholder="insérer votre prenom"></td>
            </tr>
            <tr>
                <td>Nationalite</td>
                <td><input type="text" name="nationalite" placeholder="quel est votre nationalite ?"></td>
            </tr>
            <tr>
            <td>Genre</td>
            <td><select name="genre" id="genre-select">
                <option value="">--choisissez une option--</option>
                <option value="H">Homme</option>
                <option value="F">Femme</option>
                <option value="N">non préciser</option>
            </select>
            </td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="text" name="email" placeholder="insérer votre e-mail"></td>
            </tr>
            <tr>
                <td>interne à l'entreprise</td>
                <td><input type="checkbox" checked="false" name="interne"></td>
            </tr>
            <tr>
                <td>externe à l'entreprise</td>
                <td><input type="checkbox" name="externe"></td>
            </tr>
            <tr>
                <td><input type="submit" name="bouton" value="soumettre"></td>
            </tr>
        </table>
    </form>
{% endblock %}

